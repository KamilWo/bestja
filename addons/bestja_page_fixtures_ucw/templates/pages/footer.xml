<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="new_footer" inherit_id="website.layout" name="New footer">
            <xpath expr="//footer" position="replace">
                <footer>
                    <div class="footer_inner">
                    <div class="container">
                        <div class="row">
                            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                                <div class="footer_logo">
                                    <a href="/">
                                        <img src="http://bestja.d3.laboratorium.ee/ucw/img/logo-UCW.png" alt=""/>
                                    </a>
                                    <a href="/">
                                        <img src="http://bestja.d3.laboratorium.ee/ucw/img/logo_UCW_exp_h100.png"
                                             class="pull-right" alt="Logo Uniwersyteckiego Centrum Wolontariatu"/>
                                    </a>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                                <div class="footer_info_pages">
                                    <p>
                                        <a href="/page/contactus">kontakt</a>
                                    </p>
                                    <p>
                                        <a href="/page/team">zespół</a>
                                    </p>
                                    <p>
                                        <a href="/page/regulations">regulamin</a>
                                    </p>
                                    <p>
                                        <a href="/page/privacy_policy">polityka prywatności</a>
                                    </p>
                                </div>
                            </div>
                            <div class="col-lg-3 visible-lg-block">
                                <address>
                                    <p>Uniwersyteckie Centrum Wolontariatu</p>
                                    <p>ul. Dobra 56/66 (budynek BUW)</p>
                                    <p>00-312 Warszawa</p>
                                    <p>tel. <span class="telephone_number">22 55 27 201</span>,  <span class="telephone_number">22 55 27 204</span></p>
                                </address>
                            </div>
                            <div class="col-md-4 col-lg-3 footer_icons">
                                <div class="col-xs-12 col-sm-6 fixed-col-md-12">
                                    <a t-att-href="website.social_facebook">
                                        <img src="/bestja_frontend_ucw/static/src/img/content/facebook-01.svg"/>Znajdź nas na Facebooku
                                    </a>
                                </div>
                                <div class="col-xs-12 col-sm-6 fixed-col-md-12">
                                    <a t-attf-href="mailto:{{ res_company.email }}">
                                        <img class="mail_icon" src="/bestja_frontend_ucw/static/src/img/content/mail-01.svg"/>Napisz do nas
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="row mt32 mb16">
                            <div class="col-xs-12 col-sm-6 col-md-8 col-lg-9">
                                <a class="copyrights" href="http://www.wolontariat.uw.edu.pl/">© 2015, <span t-field="res_company.name"/></a>
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-3">
                                <a class="design_by" href="http://laboratorium.ee">design by Laboratorium EE</a>
                            </div>
                        </div>
                    </div>
                    </div>
                </footer>
            </xpath>
        </template>
    </data>
</openerp>