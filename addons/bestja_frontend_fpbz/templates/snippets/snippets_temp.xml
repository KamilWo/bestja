<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="fpbz_snippets" inherit_id="website.snippets" name="Clean Theme snippets">
            <xpath expr="//div[@id='snippet_structure']" position="inside">
                <div>
                    <div class="oe_snippet_thumbnail">
                        <img class="oe_snippet_thumbnail_img" src="/website/static/src/img/snippets/s_block_title.png"/>
                        <span class="oe_snippet_thumbnail_title">SNIP IT!</span>
                    </div>
                    <section class="oe_snippet_body fw_categories">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-12 text-center mt32 mb32">
                                    <h2>A great Title</h2>
                                    <h3 class="text-muted ">And a great subtitle too</h3>
                                    <p>Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat. </p>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section>
                        <div class="container">
                            <div class="row dummy-bg">
                                <div class="alert alert-primary" role="alert">
                                <a href="#" class="alert-link">...</a>
                                </div>
                                <div class="col-md-6">
                                <h2>BLUE it!</h2>
                                    <div class="dummy-boy">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                <h2>GREEN THAT!</h2>
                                    <div class="dummy-girl">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </xpath>
            <xpath expr="//div[@id='snippet_structure']" position="inside">
                <div>
                <!-- Add a Thumbnail in the Website Builder drop-down menu -->
                    <div class="oe_snippet_thumbnail">
                        <img class="oe_snippet_thumbnail_img" src="/website/static/src/img/snippets/s_block_title.png"/>
                        <span class="oe_snippet_thumbnail_title">Test OPTION</span>
                    </div>
                <!-- Your Snippet content -->
                    <section class="oe_snippet_body fw_categories">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-6 text-center mt32 mb32">
                                    <h2>NO OPTION</h2>
                                    <p>OFF</p>
                                </div>
                                <div class="col-md-6 text-center mt32 mb32 test-option">
                                    <h2>OPTION</h2>
                                    <p>This div has the 'test-option' class</p>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </xpath>
            <xpath expr="//div[@id='snippet_structure']" position="inside">
                <div>
                    <div class="oe_snippet_thumbnail">
                        <img class="oe_snippet_thumbnail_img" src="/website/static/src/img/snippets/s_block_big_picture.png"/>
                        <span class="oe_snippet_thumbnail_title">Główne zdjęcie</span>
                    </div>
                    <section class="oe_snippet_body oe_dark mt16 mb16">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-12 text-center mt32 mb32">
                                    <h2>A Punchy Headline</h2>
                                </div>
                                <div class="col-md-12">
                                    <img class="img img-responsive" src="/bestja_frontend_fpbz/static/src/img/content/pan_z_talerzem.png" style="margin: 0 auto;"/>
                                </div>
                                <div class="col-md-6 col-md-offset-3 mb16 mt16">
                                    <p class="text-center">
                                        <b>A Small Subtitle</b>
                                    </p>
                                    <p class="text-center">
                                        Choose a vibrant image and write an inspiring paragraph
                                        about it. It does not have to be long, but it should
                                        reinforce your image.
                                    </p>
                                    <p class="text-center">
                                        <a href="/page/website.contactus">Contact us »</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </xpath>
        </template>
    </data>
</openerp>
