<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="quote_div_snippet" inherit_id="website.snippets" name="FPBZ snippet with big quote">
            <xpath expr="//div[@id='snippet_content']" position="inside">
                <div>
                    <div class="oe_snippet_thumbnail">
                        <img class="oe_snippet_thumbnail_img" src="/bestja_frontend_fpbz/static/src/img/snippets/s_block_quote.png"/>
                        <span class="oe_snippet_thumbnail_title">Big quote</span>
                    </div>
                    
                    <section class="oe_snippet_body oe_dark">
                        <div class="container-fluid quote_div open_sans_font">
                            <div class="row">
                                <blockquote>
                                    <p>
                                        <span class="big_apostrophe">" </span>Wolontariat daje mi przede wszystkim satysfakcję z pomagania, 
                                        a także możliwość kreatywnego działania. Poznaję nowych ludzi, 
                                        uczę się pracy w zespole i rozwijam swoje zainteresowania.
                                        <span style="font-family: 'Arial Bold', Arial; font-weight: 700; font-style: normal; font-size: 48px;" class="" id="cache59">" </span>
                                    </p>
                                    <small>Ania, wolontariuszka Banku Żywności w Olsztynie</small>
                                </blockquote>
                            </div>
                        </div>
                    </section>
                </div>
            </xpath>
        </template>
    </data>
</openerp>
