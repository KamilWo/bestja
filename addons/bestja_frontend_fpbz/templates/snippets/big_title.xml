<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="big_title_snippet" inherit_id="website.snippets" name="FPBZ snippet with Big Title">
            <xpath expr="//div[@id='snippet_structure']" position="inside">
                <div>
                    <div class="oe_snippet_thumbnail">
                        <img class="oe_snippet_thumbnail_img" src="/bestja_frontend_fpbz/static/src/img/snippets/s_block_title.png"/>
                        <span class="oe_snippet_thumbnail_title">Big Title</span>
                    </div>
                    
                    <section class="oe_snippet_body">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-12">
                                    <h1 class="text-center mt48 mb48 section_title">
                                        <strong>Dlaczego</strong> warto z nami działać</h1>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </xpath>
        </template>
    </data>
</openerp>
