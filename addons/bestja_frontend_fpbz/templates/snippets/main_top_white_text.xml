<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="main_top_photo_text_snippet" inherit_id="website.snippets" name="FPBZ snippet of main site top big photo and text">
            <xpath expr="//div[@id='snippet_structure']" position="inside">
                <div>
                    <div class="oe_snippet_thumbnail">
                        <img class="oe_snippet_thumbnail_img" src="/bestja_frontend_fpbz/static/src/img/snippets/s_block_big_picture.png"/>
                        <span class="oe_snippet_thumbnail_title">Top Big Photo</span>
                    </div>
                    
                    <section class="oe_snippet_body oe_dark">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-12 main_top_photo_text">
                                    <div class="main_top_white_text open_sans_font mb64">
                                        <h1 class="mt64 mb32">Rocznie w Polsce marnuje się 9 mln ton jedzenia</h1>
                                        <h3 class="mt32 mb32">2,5 mln osób nie ma dostępu do pełnowartościowej żywności</h3>
                                        <h2 class="mt32 mb32">Pomóż nam to zmienić!</h2>
                                    </div>
                                    <div class="text-center">
                                        <button class="btn btn-default btn-lg text-center mt128 mb64 choose_place">
                                            wybierz swoją miejscowość</button>
                                        <br />
                                    </div>
                                    <div class="col-md-4 col-md-offset-4 text-center centered mt128">
                                        <img class="img mouse_img" src="/bestja_frontend_fpbz/static/src/img/content/myszka.png"/>
                                        <br />
                                        <span class="direction_down">&lt;</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </xpath>
        </template>
    </data>
</openerp>
