<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="new_home_page" inherit_id="website.homepage" name="Homepage">
            <xpath expr="//div[@id='wrap']" position="replace">
                <div id="wrap" class="oe_structure oe_empty">
                    <section class="oe_snippet_body oe_dark">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-12 main_top_photo_text">
                                    <div class="main_top_white_text open_sans_font mb64">
                                        <h1 class="mt64 mb32">Rocznie w Polsce marnuje się 9 mln ton jedzenia</h1>
                                        <h3 class="mt32 mb32">2,5 mln osób nie ma dostępu do pełnowartościowej żywności</h3>
                                        <h2 class="mt32 mb32">Pomóż nam to zmienić!</h2>
                                    </div>
                                    <div class="text-center">
                                        <button class="btn btn-default btn-lg text-center mt128 mb64 choose_place">
                                            wybierz swoją miejscowość</button>
                                        <br />
                                    </div>
                                    <div class="col-md-4 col-md-offset-4 text-center centered mt128">
                                        <img class="img mouse_img" src="/bestja_frontend_fpbz/static/src/img/content/myszka.png"/>
                                        <br />
                                        <span class="direction_down">&lt;</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="oe_snippet_body">
                        <div class="container-fluid why_is_it_worth open_sans_font">
                            <div class="row">
                                <h1 class="text-center mt48 mb48 why_it_is_worth">Dlaczego warto z nami działać</h1>
                                <div class="col-md-6 mt16">
                                    <img class="img img-responsive shadow mb16" 
                                         src="/bestja_frontend_fpbz/static/src/img/content/dlaczego_warto_dzialac.png"/>
                                    * rocznie
                                </div>
                                <div class="col-md-6 mt16">
                                    <h3>Docieramy z żywnością do 1,3 <small>mln</small> osób</h3>
                                    <h4>Rozdajemy <span>60 tys.</span> ton* żywności potrzebującym</h4>
                                    <h4>Angażujemy przy zbiórkach żywności</h4>
                                    <h4 class="text-center">
                                        <span>51 tys.</span> wolontariuszy*</h4>
                                </div>
                            </div>
                            <div class="row">
                                <div class="text-center">
                                    <button class="btn btn-lg text-center mt32 mb32">ZOBACZ OFERTY</button>
                                </div>
                            </div>
                        </div>
                    </section>                    
                    <section class="oe_snippet_body">
                        <div class="container-fluid quote_div open_sans_font">
                            <div class="row">
                                <blockquote>
                                    <p>
                                        <span class="big_apostrophe">" </span>Wolontariat daje mi przede wszystkim satysfakcję z pomagania, 
                                        a także możliwość kreatywnego działania. Poznaję nowych ludzi, 
                                        uczę się pracy w zespole i rozwijam swoje zainteresowania.
                                        <span style="font-family: 'Arial Bold', Arial; font-weight: 700; font-style: normal; font-size: 48px;" class="" id="cache59">" </span>
                                    </p>
                                    <small>Ania, wolontariuszka Banku Żywności w Olsztynie</small>
                                </blockquote>
                            </div>
                        </div>
                    </section>
                    <section class="oe_snippet_body mb16">
                        <div class="container-fluid volunteers_newsletter arial_font">
                            <h1 class="text-center mt32 mb32">Biuletyn wolontariuszy</h1>
                            <div class="row mt16 mb16">
                                <div class="col-md-3 text-center">
                                    <span class="fa fa-suitcase fa-5x"></span>
                                    <h3 class="mt16 mb16">Wybierz ofertę</h3>
                                    <div class="text-muted mt16 mb8">Wybierz oferty w oparciu <br />
                                        o swoje zainteresowania.</div>
                                </div>
                                <div class="col-md-3 text-center">
                                    <span class="fa fa-lock fa-5x"></span>
                                    <h3 class="mt16 mb16">Zgłoś się</h3>
                                    <div class="text-muted mt16 mb8">Zgłoszenie na ofertę<br />
                                        to tylko chwila.</div>
                                </div>
                                <div class="col-md-3 text-center">
                                    <span class="fa fa-heart fa-5x"></span>
                                    <h3 class="mt16 mb16">Spotkanie</h3>
                                    <div class="text-muted mt16 mb8">Organizacja zaprosi Cię na<br />
                                        spotkanie w ciągu 7 dni.<br />
                                        Poznacie swoje oczekiwania<br />
                                        i możliwości.</div>
                                </div>
                                <div class="col-md-3 text-center">
                                    <span class="fa fa-heart fa-5x"></span>
                                    <h3 class="mt16 mb16">Zaproś znajomych</h3>
                                    <div class="text-muted mt16 mb8">Zaproś znajomych <br />
                                        i poznaj nowych.</div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="oe_snippet_body mt16 mb16">
                        <div class="container-fluid meet_our_volunteers arial_font">
                            <h1 class="text-center mt32 mb32">Poznaj naszych wolontariuszy</h1>
                            <div class="row row-centered">
                                <div class="col-md-4 col-centered">
                                    <img class="img img-rounded img-responsive" src="/bestja_frontend_fpbz/static/src/img/content/dziewczyna_z_ulotkami.png"/>
                                    <h3 class="mt16 mb16">Zbieram żywność w lokalnym sklepie</h3>
                                    <p class="mt16 mb16">
                                        Magda, Stowarzyszenie Monar, Warszawa
                                    </p>
                                </div>
                                <div class="col-md-4 col-centered">
                                    <img class="img img-rounded img-responsive" src="/bestja_frontend_fpbz/static/src/img/content/pan_z_rowerem.png"/>
                                    <h3 class="mt16 mb16">Jestem grafikiem w banku w Warszawie</h3>
                                    <p class="mt16 mb16">
                                        Magda, Stowarzyszenie Monar, Warszawa
                                    </p>
                                </div>
                                <div class="col-md-4 col-centered">
                                    <img class="img img-rounded img-responsive" src="/bestja_frontend_fpbz/static/src/img/content/dzieci_z_balonikami.png"/>
                                    <h3 class="mt16 mb16">Obsługuję wózek widłowy w magazynie</h3>
                                    <p class="mt16 mb16">
                                        McCormik
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="text-center">
                                    <button class="btn btn-lg text-center mt32 mb32">ZOBACZ OFERTY</button>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </xpath>
        </template>
    </data>
</openerp>